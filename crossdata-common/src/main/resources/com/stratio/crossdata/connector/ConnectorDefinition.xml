<Connector>
    <ConnectorName>cassandra_native_connector</ConnectorName>
    <DataStores>
        <DataStoreName>cassandra</DataStoreName>
    </DataStores>
    <Version>0.1.1</Version>
    <RequiredProperties>
        <Property>
            <PropertyName>Host</PropertyName>
            <Description>Cassandra Host</Description>
        </Property>
        <Property>
            <PropertyName>Port</PropertyName>
            <Description>Cassandra Port</Description>
        </Property>
    </RequiredProperties>
    <OptionalProperties>
        <Property>
            <PropertyName>Limit</PropertyName>
            <Description>Default limit</Description>
        </Property>
    </OptionalProperties>
    <SupportedOperations>
        <operation>CREATE_CATALOG</operation>
        <operation>DROP_CATALOG</operation>
        <operation>CREATE_TABLE</operation>
        <operation>DROP_TABLE</operation>
        <operation>INSERT</operation>
        <operation>DELETE</operation>
        <operation>PROJECT</operation>
    </SupportedOperations>
    <Functions>
        <Function>
            <FunctionName>capitalize</FunctionName>
            <Signature>capitalize(Tuple<Text>):Any</Signature>
            <FunctionType>simple</FunctionType>
        </Function>
        <Exclude>
            <FunctionName>trim</FunctionName>
        </Exclude>
    </Functions>
</Connector>
