<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>parent</artifactId>
        <groupId>com.stratio.crossdata</groupId>
        <version>1.2.0-SNAPSHOT</version>
    </parent>

    <artifactId>crossdata-server</artifactId>
    <packaging>jar</packaging>
    <name>Server</name>
    <description>Crossdata Server</description>
    <url>http://stratio.github.io/crossdata/</url>

    <dependencies>
        <dependency>
            <groupId>com.stratio.crossdata</groupId>
            <artifactId>crossdata-common</artifactId>
        </dependency>
        <dependency>
            <groupId>com.stratio.crossdata</groupId>
            <artifactId>crossdata-core</artifactId>
        </dependency>
        <!--TODO remove connector dependencies if the server is executed on Spark cluster-->
        <dependency>
            <groupId>com.stratio.crossdata.connector</groupId>
            <artifactId>crossdata-cassandra</artifactId>
        </dependency>
        <dependency>
            <groupId>com.stratio.crossdata.connector</groupId>
            <artifactId>crossdata-mongodb</artifactId>
        </dependency>
        <dependency>
            <groupId>com.stratio.crossdata.connector</groupId>
            <artifactId>crossdata-elasticsearch</artifactId>
        </dependency>
        <dependency>
            <groupId>com.typesafe.akka</groupId>
            <artifactId>akka-remote_${scala.binary.version}</artifactId>
            <version>${akka.version}</version>
        </dependency>
        <dependency>
            <groupId>com.typesafe.akka</groupId>
            <artifactId>akka-contrib_2.10</artifactId>
            <version>${akka.version}</version>
        </dependency>
        <dependency>
            <groupId>com.typesafe.akka</groupId>
            <artifactId>akka-testkit_2.10</artifactId>
            <version>${akka.version}</version>
        </dependency>
        <dependency>
            <groupId>com.typesafe.akka</groupId>
            <artifactId>akka-slf4j_2.10</artifactId>
            <version>${akka.version}</version>
        </dependency>
        <dependency>
            <groupId>commons-daemon</groupId>
            <artifactId>commons-daemon</artifactId>
            <version>1.0.15</version>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-log4j12</artifactId>
            <version>${slf4j.version}</version>
        </dependency>
        <dependency>
            <groupId>com.stratio.crossdata</groupId>
            <artifactId>crossdata-core</artifactId>
            <version>${project.version}</version>
            <type>test-jar</type>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>package</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-shade-plugin</artifactId>
                        <version>2.4.1</version>
                        <configuration>
                            <shadedArtifactAttached>true</shadedArtifactAttached>
                            <shadedClassifierName>jar-with-dependencies</shadedClassifierName>
                        </configuration>
                        <executions>
                            <!-- Run shade goal on package phase -->
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>shade</goal>
                                </goals>
                                <configuration>
                                    <transformers>
                                        <transformer
                                                implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                                            <mainClass>com.stratio.crossdata.server.CrossdataApplication</mainClass>
                                        </transformer>
                                        <transformer
                                                implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
                                            <resource>reference.conf</resource>
                                        </transformer>
                                        <transformer
                                                implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
                                            <resource>
                                                META-INF/services/com.stratio.crossdata.connector.FunctionInventory
                                            </resource>
                                        </transformer>
                                        <transformer
                                                implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
                                            <resource>
                                                META-INF/services/org.apache.spark.sql.sources.DataSourceRegister
                                            </resource>
                                        </transformer>
                                    </transformers>

                                    <filters>
                                        <filter>
                                            <artifact>*:*</artifact>
                                            <excludes>
                                                <exclude>META-INF/*.SF</exclude>
                                                <exclude>META-INF/*.DSA</exclude>
                                                <exclude>META-INF/*.RSA</exclude>
                                            </excludes>
                                        </filter>
                                    </filters>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>appassembler-maven-plugin</artifactId>
                        <version>1.8</version>
                        <configuration>
                            <configurationSourceDirectory>${project.basedir}/src/main/dist/config</configurationSourceDirectory>
                            <configurationDirectory>conf</configurationDirectory>
                            <copyConfigurationDirectory>true</copyConfigurationDirectory>
                            <includeConfigurationDirectoryInClasspath>true</includeConfigurationDirectoryInClasspath>
                            <assembleDirectory>${project.build.directory}/crossdata-dist-${project.parent.version}
                            </assembleDirectory>
                            <extraJvmArguments>-Xms512m</extraJvmArguments>
                            <repositoryLayout>flat</repositoryLayout>
                            <generateRepository>true</generateRepository>
                            <licenseHeaderFile>src/main/dist/include/LICENSE</licenseHeaderFile>
                            <repositoryName>lib</repositoryName>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </configuration>

                        <executions>
                            <execution>
                                <id>Assembler-Script</id>
                                <phase>package</phase>
                                <configuration>
                                    <unixScriptTemplate>${project.basedir}/src/main/dist/template/unix-script.sh</unixScriptTemplate>
                                    <programs>
                                        <program>
                                            <mainClass>com.stratio.crossdata.server.CrossdataApplication</mainClass>
                                            <id>crossdata-server</id>
                                            <platforms>
                                                <platform>unix</platform>
                                            </platforms>
                                            <jvmSettings>
                                                <systemProperties>
                                                    <systemProperty>log4j.configuration=server-log.properties</systemProperty>
                                                </systemProperties>
                                            </jvmSettings>
                                        </program>
                                    </programs>
                                </configuration>
                                <goals>
                                    <goal>assemble</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <artifactId>maven-resources-plugin</artifactId>
                        <version>2.6</version>
                        <executions>
                            <execution>
                                <id>copy-resources</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${project.build.directory}/crossdata-dist-${project.parent.version}
                                    </outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>${project.basedir}/src/main/dist/include</directory>
                                            <filtering>true</filtering>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                            <execution>
                                <id>copy-config</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${project.build.directory}/crossdata-dist-${project.parent.version}/conf
                                    </outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>${project.basedir}/src/main/dist/config</directory>
                                            <filtering>true</filtering>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>com.stratio.mojo.unix</groupId>
                        <artifactId>unix-maven-plugin</artifactId>
                        <version>1.1.6</version>
                        <extensions>true</extensions>
                        <inherited>false</inherited>

                        <configuration>
                            <contact><![CDATA[Stratio <crossdata@stratio.com>]]></contact>
                            <contactEmail>crossdata@stratio.com</contactEmail>
                            <outputFileName>stratio-crossdata</outputFileName>
                            <rpm>
                                <group>stratio</group>
                                <requires>bash</requires>
                            </rpm>
                            <deb>
                                <section>devel</section>
                            </deb>
                            <excludeDirectoryAttributes>
                                <dir>/etc</dir>
                                <dir>/etc/init.d</dir>
                                <dir>/etc/default</dir>
                                <dir>/var</dir>
                                <dir>/var/log</dir>
                                <dir>/opt</dir>
                                <dir>/usr</dir>
                                <dir>/bin</dir>
                            </excludeDirectoryAttributes>
                            <defaults>
                                <directoryAttributes>
                                    <user>stratio</user>
                                    <group>stratio</group>
                                    <mode>0775</mode>
                                </directoryAttributes>
                                <fileAttributes>
                                    <user>stratio</user>
                                    <group>stratio</group>
                                    <mode>0664</mode>
                                </fileAttributes>
                            </defaults>
                            <assembly>
                                <mkdirs>
                                    <paths>
                                        <path>etc/sds/crossdata</path>
                                        <path>var/run/sds</path>
                                        <path>var/sds/crossdata</path>
                                        <path>/var/lock/subsys</path>
                                        <path>/var/log/sds/crossdata</path>
                                    </paths>
                                    <attributes>
                                        <user>stratio</user>
                                        <group>stratio</group>
                                        <mode>775</mode>
                                    </attributes>
                                </mkdirs>
                                <copyDirectory>
                                    <from>target/crossdata-dist-${project.version}/conf/</from>
                                    <to>/etc/sds/crossdata</to>
                                </copyDirectory>
                                <copyDirectory>
                                    <from>target/crossdata-dist-${project.version}/lib/</from>
                                    <to>/opt/sds/crossdata/lib</to>
                                </copyDirectory>
                                <copyDirectory>
                                    <from>target/crossdata-dist-${project.version}/bin</from>
                                    <to>/opt/sds/crossdata/bin</to>
                                    <!-- afects all files on this directory -->
                                    <fileAttributes>
                                        <user>stratio</user>
                                        <group>stratio</group>
                                        <mode>0775</mode>
                                    </fileAttributes>
                                </copyDirectory>
                            </assembly>
                        </configuration>
                        <executions>
                            <execution>
                                <id>create-rpm</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>package-rpm</goal>
                                </goals>
                                <configuration>
                                    <architecture>noarch</architecture>
                                    <assembly>
                                        <copyFile>
                                            <path>src/main/unix/files_and_dirs/etc/init.d/rpm/crossdata</path>
                                            <toFile>/etc/init.d/crossdata</toFile>
                                            <attributes>
                                                <user>root</user>
                                                <group>root</group>
                                                <mode>755</mode>
                                            </attributes>
                                        </copyFile>

                                        <copyFile>
                                            <path>target/crossdata-dist-${project.version}/lib/${project.artifactId}-${project.version}.jar</path>
                                            <toFile>/opt/sds/crossdata/lib/${project.artifactId}-${project.version}.jar</toFile>
                                            <attributes>
                                                <user>stratio</user>
                                                <group>stratio</group>
                                                <mode>755</mode>
                                            </attributes>
                                        </copyFile>

                                        <copyFile>
                                            <path>src/main/dist/config/server-application.conf</path>
                                            <toFile>/etc/sds/crossdata/server-application.conf</toFile>
                                        </copyFile>
                                        <copyFile>
                                            <path>src/main/dist/config/core-application.conf</path>
                                            <toFile>/etc/sds/crossdata/core-application.conf</toFile>
                                        </copyFile>
                                        <copyFile>
                                            <path>src/main/dist/config/xdmetrics.properties</path>
                                            <toFile>/etc/sds/crossdata/xdmetrics.properties</toFile>
                                        </copyFile>
                                        <copyFile>
                                            <path>src/main/dist/config/crossdata-env.sh</path>
                                            <toFile>/etc/sds/crossdata/crossdata-env.sh</toFile>
                                        </copyFile>
                                        <copyFile>
                                            <path>src/main/dist/config/server-log.properties</path>
                                            <toFile>/etc/sds/crossdata/server-log.properties</toFile>
                                        </copyFile>
                                        <copyFile>
                                            <path>src/main/dist/include/README.rst</path>
                                            <toFile>/opt/sds/crossdata/README.rst</toFile>
                                            <attributes>
                                                <user>stratio</user>
                                                <group>stratio</group>
                                                <mode>644</mode>
                                            </attributes>
                                        </copyFile>
                                        <copyFile>
                                            <path>target/crossdata-dist-${project.version}/LICENSE</path>
                                            <toFile>/opt/sds/crossdata/LICENSE</toFile>
                                        </copyFile>
                                        <copyFile>
                                            <path>target/crossdata-dist-${project.version}/NOTICE</path>
                                            <toFile>/opt/sds/crossdata/NOTICE</toFile>
                                        </copyFile>
                                        <copyFile>
                                            <path>src/main/unix/files_and_dirs/etc/default/crossdata-variables</path>
                                            <toFile>/etc/default/crossdata-variables</toFile>
                                            <attributes>
                                                <user>root</user>
                                                <group>root</group>
                                                <mode>755</mode>
                                            </attributes>
                                        </copyFile>
                                    </assembly>
                                </configuration>
                            </execution>
                            <execution>
                                <id>create-deb</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>package-deb</goal>
                                </goals>
                                <configuration>
                                    <architecture>all</architecture>
                                    <assembly>
                                        <copyFile>
                                            <path>src/main/unix/files_and_dirs/etc/init.d/deb/crossdata</path>
                                            <toFile>/etc/init.d/crossdata</toFile>
                                            <attributes>
                                                <user>root</user>
                                                <group>root</group>
                                                <mode>755</mode>
                                            </attributes>
                                        </copyFile>

                                        <copyFile>
                                            <path>target/crossdata-dist-${project.version}/lib/${project.artifactId}-${project.version}.jar</path>
                                            <toFile>/opt/sds/crossdata/lib/${project.artifactId}-${project.version}.jar</toFile>
                                            <attributes>
                                                <user>stratio</user>
                                                <group>stratio</group>
                                                <mode>755</mode>
                                            </attributes>
                                        </copyFile>


                                        <copyFile>
                                            <path>src/main/dist/config/server-application.conf</path>
                                            <toFile>/etc/sds/crossdata/server-application.conf</toFile>
                                        </copyFile>
                                        <copyFile>
                                            <path>src/main/dist/config/core-application.conf</path>
                                            <toFile>/etc/sds/crossdata/core-application.conf</toFile>
                                        </copyFile>
                                        <copyFile>
                                            <path>src/main/dist/config/xdmetrics.properties</path>
                                            <toFile>/etc/sds/crossdata/xdmetrics.properties</toFile>
                                        </copyFile>
                                        <copyFile>
                                            <path>src/main/dist/config/crossdata-env.sh</path>
                                            <toFile>/etc/sds/crossdata/crossdata-env.sh</toFile>
                                        </copyFile>
                                        <copyFile>
                                            <path>src/main/dist/config/server-log.properties</path>
                                            <toFile>/etc/sds/crossdata/server-log.properties</toFile>
                                        </copyFile>
                                        <copyFile>
                                            <path>src/main/dist/include/README.rst</path>
                                            <toFile>/opt/sds/crossdata/README.rst</toFile>
                                            <attributes>
                                                <user>stratio</user>
                                                <group>stratio</group>
                                                <mode>644</mode>
                                            </attributes>
                                        </copyFile>
                                        <copyFile>
                                            <path>target/crossdata-dist-${project.version}/LICENSE</path>
                                            <toFile>/opt/sds/crossdata/LICENSE</toFile>
                                        </copyFile>
                                        <copyFile>
                                            <path>target/crossdata-dist-${project.version}/NOTICE</path>
                                            <toFile>/opt/sds/crossdata/NOTICE</toFile>
                                        </copyFile>
                                        <copyFile>
                                            <path>src/main/unix/files_and_dirs/etc/default/crossdata-variables</path>
                                            <toFile>/etc/default/crossdata-variables</toFile>
                                            <attributes>
                                                <user>root</user>
                                                <group>root</group>
                                                <mode>755</mode>
                                            </attributes>
                                        </copyFile>
                                    </assembly>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                </plugins>
            </build>
        </profile>
    </profiles>
</project>

