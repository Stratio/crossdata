<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.stratio.crossdata</groupId>
        <artifactId>parent</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>crossdata-dist</artifactId>
    <name>Distribution</name>
    <description>${project.name}</description>
    <packaging>pom</packaging>


    <dependencies>
        <dependency>
            <groupId>com.stratio.crossdata</groupId>
            <artifactId>crossdata-server</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <version>2.8.2</version>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>appassembler-maven-plugin</artifactId>
                <version>1.8</version>
                <configuration>
                    <configurationDirectory>conf</configurationDirectory>
                    <copyConfigurationDirectory>true</copyConfigurationDirectory>
                    <includeConfigurationDirectoryInClasspath>true</includeConfigurationDirectoryInClasspath>
                    <assembleDirectory>${project.build.directory}/crossdata-dist-${project.parent.version}
                    </assembleDirectory>
                    <extraJvmArguments>-Xms512m</extraJvmArguments>
                    <repositoryLayout>flat</repositoryLayout>
                    <generateRepository>true</generateRepository>
                    <licenseHeaderFile>${project.basedir}/src/main/include/LICENSE</licenseHeaderFile>
                    <repositoryName>lib</repositoryName>
                    <platforms>
                        <platform>unix</platform>
                    </platforms>

                </configuration>
                <executions>
                    <execution>
                        <id>Assembler-Script</id>
                        <phase>package</phase>
                        <configuration>
                            <unixScriptTemplate>${project.basedir}/src/main/template/unix-script.sh</unixScriptTemplate>
                            <programs>
                                <program>
                                    <mainClass>com.stratio.crossdata.server.CrossdataApplication</mainClass>
                                    <id>crossdata-server</id>
                                    <platforms>
                                        <platform>unix</platform>
                                    </platforms>
                                    <jvmSettings>
                                        <systemProperties>
                                            <systemProperty>log4j.configuration=server-log.properties</systemProperty>
                                        </systemProperties>
                                    </jvmSettings>
                                </program>
                            </programs>
                        </configuration>
                        <goals>
                            <goal>assemble</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>Assembler-Daemon</id>
                        <phase>package</phase>
                        <configuration>
                            <unixScriptTemplate>${project.basedir}/src/main/template/unix-daemon.sh</unixScriptTemplate>
                            <programs>
                                <program>
                                    <mainClass>com.stratio.crossdata.server.CrossdataServer</mainClass>
                                    <id>crossdata-server-daemon</id>
                                    <platforms>
                                        <platform>unix</platform>
                                    </platforms>
                                    <jvmSettings>
                                        <systemProperties>
                                            <systemProperty>log4j.configuration=server-log.properties</systemProperty>
                                        </systemProperties>
                                    </jvmSettings>
                                </program>
                            </programs>
                        </configuration>
                        <goals>
                            <goal>assemble</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.6</version>
                <executions>
                    <execution>
                        <id>copy-resources</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/crossdata-dist-${project.parent.version}
                            </outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${project.basedir}/src/main/include</directory>
                                    <filtering>true</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <version>2.8.1</version>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>

        </plugins>
    </build>

    <profiles>
        <profile>
            <id>package</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.stratio.mojo.unix</groupId>
                        <artifactId>unix-maven-plugin</artifactId>
                        <version>1.1.6</version>
                        <extensions>true</extensions>
                        <inherited>false</inherited>
                        <configuration>
                            <contact><![CDATA[Stratio <crossdata@stratio.com>]]></contact>
                            <contactEmail>crossdata@stratio.com</contactEmail>
                            <outputFileName>stratio-crossdata</outputFileName>
                            <rpm>
                                <group>stratio</group>
                                <requires>bash</requires>
                            </rpm>
                            <deb>
                                <section>devel</section>
                            </deb>
                            <excludeDirectoryAttributes>
                                <dir>/etc</dir>
                                <dir>/etc/init.d</dir>
                                <dir>/etc/default</dir>
                                <dir>/var</dir>
                                <dir>/opt</dir>
                                <dir>/usr</dir>
                                <dir>/bin</dir>
                            </excludeDirectoryAttributes>
                            <defaults>
                                <directoryAttributes>
                                    <user>stratio</user>
                                    <group>stratio</group>
                                    <mode>0775</mode>
                                </directoryAttributes>
                                <fileAttributes>
                                    <user>stratio</user>
                                    <group>stratio</group>
                                    <mode>0664</mode>
                                </fileAttributes>
                            </defaults>
                            <assembly>
                                <mkdirs>
                                    <paths>
                                        <path>etc/sds/crossdata</path>
                                        <path>etc/default</path>
                                        <path>var/run/sds</path>
                                        <path>var/log/sds/crossdata</path>
                                        <path>var/sds/crossdata</path>
                                    </paths>
                                    <attributes>
                                        <user>stratio</user>
                                        <group>stratio</group>
                                        <mode>775</mode>
                                    </attributes>
                                </mkdirs>

                                <copyDirectory>
                                    <from>target/crossdata-dist-${project.version}/bin</from>
                                    <to>/opt/sds/crossdata/bin</to>
                                    <!-- afects all files on this directory -->
                                    <fileAttributes>
                                        <user>stratio</user>
                                        <group>stratio</group>
                                        <mode>0775</mode>
                                    </fileAttributes>
                                </copyDirectory>
                                <copyDirectory>
                                    <from>target/crossdata-dist-${project.version}/conf</from>
                                    <to>/etc/sds/crossdata</to>
                                </copyDirectory>
                                <copyDirectory>
                                    <from>target/crossdata-dist-${project.version}/lib</from>
                                    <to>/opt/sds/crossdata/lib</to>
                                </copyDirectory>

                                <copyFile>
                                    <path>src/main/include/README.rst</path>
                                    <toFile>/opt/sds/crossdata/README.rst</toFile>
                                    <attributes>
                                        <user>stratio</user>
                                        <group>stratio</group>
                                        <mode>644</mode>
                                    </attributes>
                                </copyFile>
                                <copyFile>
                                    <path>target/crossdata-dist-${project.version}/LICENSE</path>
                                    <toFile>/opt/sds/crossdata/LICENSE</toFile>
                                </copyFile>
                                <copyFile>
                                    <path>target/crossdata-dist-${project.version}/NOTICE</path>
                                    <toFile>/opt/sds/crossdata/NOTICE</toFile>
                                </copyFile>
                                <copyFile>
                                    <path>src/main/unix/files_and_dirs/etc/init.d/crossdata</path>
                                    <toFile>/etc/init.d/crossdata</toFile>
                                    <attributes>
                                        <user>root</user>
                                        <group>root</group>
                                        <mode>755</mode>
                                    </attributes>
                                </copyFile>
                                <copyFile>
                                    <path>src/main/unix/files_and_dirs/etc/default/crossdata-variables</path>
                                    <toFile>/etc/default/crossdata-variables</toFile>
                                    <attributes>
                                        <user>root</user>
                                        <group>root</group>
                                        <mode>755</mode>
                                    </attributes>
                                </copyFile>

                            </assembly>
                        </configuration>
                        <executions>
                            <execution>
                                <id>create-rpm</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>package-rpm</goal>
                                </goals>
                                <configuration>
                                    <architecture>noarch</architecture>
                                </configuration>
                            </execution>
                            <execution>
                                <id>create-deb</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>package-deb</goal>
                                </goals>
                                <configuration>
                                    <architecture>all</architecture>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>